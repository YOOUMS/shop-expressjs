<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/head.ejs') %>
  <body>
    <%- include('../includes/navigation.ejs') %>
    <main class="main-container-login-page">
      <form action="/login" method="POST">
        <div class="login-form">
          <% errorMessages.forEach((errorMessage)=>{%>
          <div class="alert-message"><%= errorMessage.message%></div>
          <%}) %> <% updateMessages.forEach((updateMessage)=>{%>
          <div class="update-message"><%= updateMessage%></div>
          <%}) %>
          <div class="email-inputs">
            <label for="emial">Email</label>
            <input
              class="<%= errorMessages.find((element)=> element.path[0]=='email')? 'invalid':'' %>"
              type="text"
              name="email"
              id="emialInput"
              value="<%= email %>"
              required
            />
          </div>
          <div class="password-inputs">
            <label for="password"> Password </label>
            <input
              class="<%= errorMessages.find((element)=> element.path[0]=='password')? 'invalid':'' %>"
              type="password"
              name="password"
              id="passwordInput"
              value="<%= password %>"
              required
            />
          </div>

          <button type="submit">Login</button>
        </div>
      </form>

      <div class="signup">
        don't have account? <a href="/signup">signup now.</a>
      </div>
    </main>
  </body>
</html>
