      <div class="login-container">
        <li>
          <a href="/login" class="<%= path=== '/login'? 'active':' ' %>"
            >Login</a
          >
        </li>
      </div>
      <%} else { %>
      <div class="login-container">
        <li>
          <a href="/logout" class="<%= path=== '/logout'? 'active':' ' %>"
            >Logout</a
          >
        </li>
      </div>
      <%}%>
    </ul>
